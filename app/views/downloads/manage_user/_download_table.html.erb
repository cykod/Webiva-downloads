<% active_table_for :download_table, @active_table_output,
  :refresh_url => url_for(:action => 'display_download_table', :path => [@user.id], :tab => @tab),
  :more_actions => [['Revoke', 'delete', 'Are you sure you want to revoke this users abiltiy to download these items?']] do |t| -%>
  <% active_tr 'download', t.id do |tr| %>
    <td><%= tr.checkbox %></td>
    <td><%= h t.downloads_item ? t.downloads_item.name : '-' %></td>
    <td><%= t.created_at.localize(DEFAULT_DATETIME_FORMAT) %></td>
  <% end -%>
<% end -%>
