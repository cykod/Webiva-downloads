<% active_table_for :download_table, @active_table_output,
   :more_actions => [['Delete', 'delete', 'Are you sure you want to delete these downloads?']] do |t| -%>
  <% active_tr 'download', t.id do |tr| %>
    <td><%= tr.checkbox %></td>
    <td>
      <%= link_to(theme_image_tag('icons/actions/edit.gif'), :action => 'download', :path => t.id) %>
      <%= content_tag :a, t.name, :href => url_for(:action => 'users', :path => t.id) %>
    </td>
    <td><%= t.domain_file ? content_tag(:a, t.domain_file.name, :href => t.domain_file.url) : '-' %></td>
    <td><%= h t.description %></td>
    <td><%= t.num_allowed_users %></td>
    <td><%= t.created_at.localize(DEFAULT_DATETIME_FORMAT) %></td>
    <td><%= t.updated_at.localize(DEFAULT_DATETIME_FORMAT) %></td>
  <% end -%>
<% end -%>

